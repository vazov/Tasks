<div id='task'>
  <h2><%= @task.title %></h2>
  <%= simple_format(@task.content) %>
  Task creator:  
  <%= link_to @task.user.first_name, @task.user %>
</div>

<%= form_for [@project, @task, @comment] do |f| %>
  <% if @comment.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@comment.errors.count, "error") %> prohibited this post from being saved:</h2>
      <ul>
      <% @comment.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :New_comment %><br>
    <%= f.text_area :content %>
  </div>
  <div class="actions">
    <%= f.submit "Create comment", class: "btn btn-primary"%>
  </div>
<% end %>

<table>
  <thead>
    <tr>
      <th></th>
      <th colspan="1"></th>
    </tr>
  </thead>

  <tbody>
    <% @comments.each do |comment| %>
      <tr>
        <td><%= link_to comment.content, comment %></td><br>
      </tr>
    <% end %>
  </tbody>
</table>
<p></p>

<%= link_to "Edit Task", [:edit, @project, @task], class: "btn btn-primary" %>
<%= link_to "Delete Task", [@project, @task], method: :delete,
data: { confirm: "Are you sure you want to delete this task?"}, class: "btn btn-danger" %>
