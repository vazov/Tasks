<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to "Tasks", root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right"> 
        <% if logged_in? %>
          <li><%= link_to "My Tasks", my_tasks_path %></li>
          <li><%= link_to "My Projects", my_projects_path %></li>
          <li><%= link_to "My Teams", my_teams_path %></li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <%= current_user.first_name %> <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to "Profile", user_path(current_user) %></li>
              <li><%= link_to "All_teams", teams_path %></li>
              <li class="divider"></li>
              <li>
                <%= link_to "Log out", signout_path %>
              </li>
              <% admins_only do %>
              <li>
                <%= link_to "Admin", admin_root_path %>
              </li>  
              <% end %>
            </ul>
          </li>
        <% else %>
          <li><%= link_to "Sign up", new_user_path %></li>
          <li><%= link_to "Sign in", signin_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
