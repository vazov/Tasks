<h2><%= @team.name %></h2>

<ul id='projects'>
  Our current projects:
  <% @team.projects.each do |project| %>
     <li>
      <%= link_to project.name, [@team, project] %>
    </li>
  <% end %>
</ul>

<% admins_only do %>
  <%= link_to "Edit Team", edit_team_path(@team) %>
  <%= link_to "Delete Team",
  	team_path(@team),
  	method: :delete,
  	data: { confirm:
  	"Are you sure you want to delete this team?" } %> 
<% end %>
  <%= link_to "New Project", new_team_project_path(@team) %>
